<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
		<title>{{brand}} Laundrye</title>
	</head>
	<body>
		<!-- Navbar (sit on top) -->
		<div class="w3-top">
		  <div class="w3-bar w3-white w3-padding w3-card">
		    <div class="w3-margin-left">
		    		<div class="w3-dropdown-hover">
		    			<button class="w3-button">Menu</button>
					    <div class="w3-dropdown-content w3-bar-block">
							<a href="/admin_exec" method="get" class="w3-bar-item w3-button">Admin Home</a>
							<a href="/edit_user" method="get" class="w3-bar-item w3-button">User Manage</a>
							<a href="/chg_password_admin" method="get" class="w3-bar-item w3-button">Change Password</a>
						</div>
					</div>
				    <div class="w3-right">
				    	<a href="/logout" method="get" class="w3-bar-item w3-button"><b>Log Out</b></a>
				    </div>
		    <!-- Float links to the right. Hide them on small screens -->
		  	</div>
		  </div>
		</div>
		<header class="w3-display-container w3-content w3-center w3-margin" style="max-width:1500px; padding-top:74px;" id="home">
		  <img href="/" method="get" class="w3-image" src="images/otouch.png" alt="Architecture" width="1500" height="800">
		</header>

		<div class="w3-container w3-padding-large w3-pale-yellow">
			<h3>Pricing at {{outlet}}</3>
		</div>
		<div class="w3-section">
			<table class="w3-table-all">
				<tr>
    				<th>Washer</th>
    				<th>Cold</th>
    				<th>Warm</th>
    				<th>Hot</th>
    				<th>Edit</th>
  				</tr>
				{{#washers}}
  					<tr>
  						<td>{{type}}</td>
  						<td>{{coldPrice}}</td>
  						<td>{{warmPrice}}</td>
  						<td>{{hotPrice}}</td>
  						<td><form action="/update_price" method="post">
							<button name="myType" value={{type}} type="submit">Edit</button>
						</form></td>
  					</tr>
  				{{/washers}}
  			</table>
  			<br>
  			<table class="w3-table-all">
				<tr>
    				<th>Type</th>
    				<th>Det</th>
    				<th>Soft</th>
    				<th>LB</th>
    				<th>Edit</th>
  				</tr>
				{{#vending}}
  					<tr>
  						<td>{{type}}</td>
  						<td>{{detPrice}}</td>
  						<td>{{softPrice}}</td>
  						<td>{{begPrice}}</td>
  						<td><form action="/update_price" method="post">
							<button name="myType" value={{type}} type="submit">Edit</button>
						</form></td>
  					</tr>
  				{{/vending}}
  			</table>
  			<br>
  			<table class="w3-table-all">
				<tr>
    				<th>Dryer</th>
    				<th>Run Time for RM 1</th>
    				<th>Edit</th>
  				</tr>
				{{#dryer}}
  					<tr>
  						<td>{{type}}</td>
  						<td>{{runTime}}</td>
  						<td><form action="/update_price" method="post">
							<button name="myType" value={{type}} type="submit">Edit</button>
						</form></td>
  					</tr>
  				{{/dryer}}
  			</table>
  		</div>
	</body>
</html>
